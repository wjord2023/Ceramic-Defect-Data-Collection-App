/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2196F3 0%, #21CBF3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

/* App信息区域 */
.app-info {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 30rpx;
  background: white;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.app-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 登录区域 */
.login-section {
  margin-bottom: 60rpx;
}

.login-btn {
  background: #07C160;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(7,193,96,0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
}

.login-tips {
  text-align: center;
  margin-top: 30rpx;
}

.login-tips text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}

/* 底部说明 */
.footer {
  text-align: center;
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
}