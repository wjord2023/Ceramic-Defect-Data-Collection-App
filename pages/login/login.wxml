<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-content">
    <!-- Logo 和标题 -->
    <view class="app-info">
      <image class="app-logo" src="/images/ceramic-logo.png" mode="aspectFit"></image>
      <text class="app-title">陶瓷缺陷数据收集系统</text>
      <text class="app-subtitle">AI训练数据采集工具</text>
    </view>
    
    <!-- 登录按钮 -->
    <view class="login-section">
      <button class="login-btn" bindtap="getUserProfile" wx:if="{{canIUseGetUserProfile}}">
        <image class="wechat-icon" src="/images/wechat-white.png"></image>
        <text>微信快速登录</text>
      </button>
      
      <view class="login-tips">
        <text>登录后即可开始收集数据</text>
      </view>
    </view>
    
    <!-- 底部说明 -->
    <view class="footer">
      <text class="footer-text">登录即表示您同意使用本工具进行数据收集</text>
    </view>
  </view>
</view>