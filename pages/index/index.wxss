/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
  position: relative;
}

.collector-info {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255,255,255,0.2);
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.collector-info:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.3);
}

.collector-icon {
  width: 32rpx;
  height: 32rpx;
}

.collector-name {
  font-size: 24rpx;
  color: white;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.8;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-section {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.stats-card {
  flex: 1;
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.stats-number {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 10rpx;
}

.stats-label {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.secondary {
  background: linear-gradient(135deg, #FF9800, #F57C00);
  color: white;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 云端上传区域 */
.cloud-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.cloud-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.upload-btn {
  width: 100%;
  padding: 20rpx 25rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column; /* 垂直布局 */
  align-items: center;
  justify-content: center;
  gap: 8rpx; /* 行间距 */
  position: relative;
  transition: all 0.3s ease;
  min-height: 100rpx; /* 增加高度 */
  text-align: center;
  line-height: 1.2;
}

.upload-btn.active {
  background: linear-gradient(135deg, #9C27B0, #E91E63);
  color: white;
}

.upload-btn.synced {
  background: #f0f0f0;
  color: #666;
}

/* 主文字行样式 */
.btn-main-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  line-height: 1;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}

.loading-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  flex-shrink: 0;
}

/* 次要信息行样式 */
.btn-sub-row {
  font-size: 22rpx;
  opacity: 0.8;
  line-height: 1;
  font-weight: normal;
}

.upload-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.loading-spinner {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.defect-types {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.type-item {
  margin-bottom: 30rpx;
}

.type-item:last-child {
  margin-bottom: 0;
}

.type-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
}

.type-count {
  font-size: 24rpx;
  color: #666;
}

.type-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.type-progress {
  height: 100%;
  background: linear-gradient(90deg, #2196F3, #21CBF3);
  transition: width 0.3s ease;
}

/* 姓名设置弹窗 */
.name-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.name-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 20rpx;
  width: 95%;
  max-width: 650rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #f8f9fa;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.6;
}

.modal-body {
  padding: 60rpx 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.name-input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  line-height: 84rpx;
  background: white;
  transition: border-color 0.3s ease;
  box-sizing: border-box;
  vertical-align: middle;

  /* 关键修复 - 强制文字颜色可见 */
  color: #333 !important;
  -webkit-text-fill-color: #333 !important;
  text-shadow: none !important;
  opacity: 1 !important;
  
  /* iOS兼容性 */
  -webkit-appearance: none;
  appearance: none;
  -webkit-font-smoothing: antialiased;
  -webkit-user-select: text;
  user-select: text;
}

.name-input:focus {
  border-color: #2196F3;
  background: white;
}


.input-tips {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #2196F3;
}

.tip-text {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 40rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  background: white;
  transition: background-color 0.3s ease;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.cancel:active {
  background-color: #f5f5f5;
}

.modal-btn.confirm {
  color: #2196F3;
}

.modal-btn.confirm:active {
  background-color: rgba(33, 150, 243, 0.1);
}