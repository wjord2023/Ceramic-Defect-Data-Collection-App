/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-section {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.stats-card {
  flex: 1;
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.stats-number {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 10rpx;
}

.stats-label {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.secondary {
  background: linear-gradient(135deg, #FF9800, #F57C00);
  color: white;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 云端上传区域 */
.cloud-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.cloud-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.upload-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  color: #666;
}

.upload-status.success {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.upload-status.error {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

.upload-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  position: relative;
}

.upload-btn.active {
  background: linear-gradient(135deg, #9C27B0, #E91E63);
  color: white;
}

.upload-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.upload-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.loading-spinner {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.defect-types {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.type-item {
  margin-bottom: 30rpx;
}

.type-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
}

.type-count {
  font-size: 24rpx;
  color: #666;
}

.type-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.type-progress {
  height: 100%;
  background: linear-gradient(90deg, #2196F3, #21CBF3);
  transition: width 0.3s ease;
}