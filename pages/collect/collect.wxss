/* collect.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 拍照区域 */
.camera-section {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.camera-placeholder {
  padding: 80rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.camera-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.placeholder-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.take-photo-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin: 0 auto;
  width: 200rpx;
}

.image-preview {
  position: relative;
}

.preview-image {
  width: 100%;
  height: 400rpx;
}

.image-actions {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  background: #f8f9fa;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  border: none;
  font-size: 26rpx;
}

.retake {
  background: #FF9800;
  color: white;
}

.delete {
  background: #f44336;
  color: white;
}

/* 缺陷类型选择 */
.defect-selection {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.defect-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.defect-btn {
  padding: 25rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #e0e0e0;
  background: #f8f9fa;
  color: #333;
  transition: all 0.3s ease;
  text-align: center;
}

.defect-btn.selected {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  border-color: #2196F3;
  color: white;
  transform: scale(1.02);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.defect-btn:active {
  transform: scale(0.98);
}

/* 提交按钮 */
.submit-section {
  margin-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  padding: 30rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.submit-btn.active {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.submit-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 成功提示模态框 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.success-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin: 40rpx;
  max-width: 500rpx;
}

.success-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
}

.success-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 40rpx;
}

.continue-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}