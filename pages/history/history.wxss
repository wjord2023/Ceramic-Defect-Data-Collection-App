/* history.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索和筛选区域 */
.filter-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  padding: 20rpx 0;
  font-size: 28rpx;
  background: transparent;
}

.filter-tabs {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.filter-tab {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  color: white;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.stats-text {
  font-size: 26rpx;
  color: #666;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.sort-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 记录列表 */
.records-list {
  margin-bottom: 40rpx;
}

.record-item {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: transform 0.2s ease;
}

.record-item:active {
  transform: scale(0.98);
}

.record-image {
  position: relative;
  margin-right: 20rpx;
}

.thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.defect-tag {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  padding: 5rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

.defect-tag.normal {
  background: #4CAF50;
}

.defect-tag.defect {
  background: #f44336;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-actions {
  display: flex;
  gap: 15rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.action-icon.delete {
  opacity: 0.8;
}

.record-note {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.no-note {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
  margin-bottom: 10rpx;
}

.record-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  gap: 5rpx;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.start-collect-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  width: 200rpx;
}

/* 详情模态框 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.detail-image {
  padding: 20rpx;
  text-align: center;
  background: #f8f9fa;
}

.full-image {
  width: 100%;
  max-height: 300rpx;
  border-radius: 10rpx;
}

.detail-info {
  padding: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.info-label {
  width: 150rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.defect-type {
  color: #f44336;
  font-weight: bold;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 10rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-btn.secondary {
  background: #2196F3;
  color: white;
}

.modal-btn.danger {
  background: #f44336;
  color: white;
}